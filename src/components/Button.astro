---
const {
	href,
	variant = "primary",
	size = "md",
	type = "button",
	class: className = "",
	...rest
} = Astro.props;

const Tag = href ? "a" : "button";
const classes = `btn btn-${variant} btn--${size} ${className}`.trim();
---

<Tag
	class={classes}
	href={href}
	type={Tag === "button" ? type : undefined}
	{...rest}
>
	<slot />
</Tag>
