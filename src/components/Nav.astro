---
const links = [
  { href: '/', label: 'Work' },
  { href: '/about', label: 'About' },
  { href: '/lab', label: 'Playground' },
  { href: '/playlists', label: 'Playlists' },
];

const currentPath = Astro.url.pathname;
const isActive = (href: string) => (href === '/' ? currentPath === '/' : currentPath.startsWith(href));
---

<header id="site-nav" class="nav nav--shell wrapper" data-open="false" transition:persist transition:name="nav">
  <!-- Social panel -->
  <div class="nav__social-panel">
    <a class="nav__social-pill" href="https://www.instagram.com/_isthatjeff/" target="_blank">IG</a>
    <a class="nav__social-pill" href="https://www.linkedin.com/in/jeffrey-herrera/" target="_blank">LI</a>
    <a class="nav__social-pill" href="mailto:HERRERA.JEFFREY@GMAIL.COM">HERRERA.JEFFREY@GMAIL.COM</a>
  </div>
  <!-- Always-visible row (80px peek) -->
  <nav class="nav__row nav__row--desktop">
    <a href="/" class="nav__brand">
      <img src="/favicon.svg" alt="Jeff Herrera" class="nav__brand-icon">
      <span class="nav__brand-text">Jeff Herrera</span>
    </a>
    <div class="nav__links">
      <ul class="nav__links-grid">
        {links.map((link) => (
          <li class="nav__link-item">
            {(() => {
              const active = isActive(link.href);
              return (
                <a
                  href={link.href}
                  aria-current={active ? 'page' : undefined}
                  data-nav-link
                  class={`nav__link ${active ? 'nav__link--active' : ''}`}
                >
                  {link.label}
                </a>
              );
            })()}
          </li>
        ))}
      </ul>
    </div>
    <button class="nav__contact" type="button" data-nav-toggle aria-expanded="false">
      <span class="nav__contact-label">&uparrow; Contact</span>
      <span class="nav__icon nav__icon--menu" aria-hidden="true">
        <svg viewBox="0 0 24 24" role="presentation">
          <path
            d="M4 7h16M4 12h16M4 17h16"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
          />
        </svg>
      </span>
      <span class="nav__icon nav__icon--close" aria-hidden="true">
        <svg viewBox="0 0 24 24" role="presentation">
          <path
            d="M6 6l12 12M18 6l-12 12"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
          />
        </svg>
      </span>
    </button>
  </nav>
  <nav class="nav__row nav__row--mobile">
    <a href="/" class="nav__brand">
      <img src="/favicon.svg" alt="Jeff Herrera" class="nav__brand-icon">
      <span class="nav__brand-text">Jeff Herrera</span>
    </a>
    <button class="nav__contact" type="button" data-nav-toggle aria-expanded="false">
      <span class="nav__icon nav__icon--menu" aria-hidden="true">
        <svg viewBox="0 0 24 24" role="presentation">
          <path
            d="M4 7h16M4 12h16M4 17h16"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
          />
        </svg>
      </span>
      <span class="nav__icon nav__icon--close" aria-hidden="true">
        <svg viewBox="0 0 24 24" role="presentation">
          <path
            d="M6 6l12 12M18 6l-12 12"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
          />
        </svg>
      </span>
    </button>
  </nav>
  <div class="nav__mobile-links">
    <ul class="nav__mobile-list">
      {links.map((link) => {
        const active = isActive(link.href);
        return (
          <li class="nav__mobile-item">
            <a
              href={link.href}
              aria-current={active ? "page" : undefined}
              data-nav-link
              class={`nav__mobile-link ${active ? "nav__mobile-link--active" : ""}`}
            >
              {link.label}
            </a>
          </li>
        );
      })}
    </ul>
  </div>
</header>
<div
  id="nav-overlay"
  class="nav__overlay"
  transition:persist
  transition:name="nav-overlay"
></div>

<style>
  .nav {
    position: fixed;
    inset: 0 auto auto 0;
    right: 0;
    top: 0;
    z-index: 40;
    padding-top: 0;
  }

  .nav--shell {
    background-color: color-mix(in srgb, var(--color-orange-50) 80%, transparent);
    backdrop-filter: blur(8px);
    --nav-social-height: 0px;
    --nav-peek: 24px;
    transform: translateY(calc(-1 * (var(--nav-social-height) - var(--nav-peek))));
    opacity: 0;
    transition: none;
  }

  .nav--shell[data-ready='true'] {
    opacity: 1;
    transition: opacity 200ms ease,
      transform 800ms linear(0, 0.024 2.1%, 0.097 4.5%, 0.534 14.4%, 0.724 19.7%, 0.859 25.2%, 0.908 28.1%, 0.946 31.3%, 0.99 37.6%, 1.008 45.7%, 1),
      background-color 300ms ease;
  }

  .nav--shell[data-open='true'] {
    transform: translateY(0);
    background-color: transparent;
    backdrop-filter: none;
  }

  .nav__overlay[data-open='true'] {
    background-color: color-mix(in srgb, var(--color-orange-50) 80%, transparent);
    backdrop-filter: blur(12px);
    pointer-events: auto;
    transition-delay: 0ms;
  }

  .nav__overlay {
    position: fixed;
    inset: 0;
    z-index: 30;
    pointer-events: none;
    background-color: transparent;
    backdrop-filter: none;
    transition: background-color 300ms ease, backdrop-filter 300ms ease;
  }

  .nav__overlay[data-open='false'] {
    transition-delay: 100ms;
  }

  .nav__social-panel {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    align-items: center;
    padding: 2.5rem 2rem 3rem;
    background-color: var(--color-orange-500);
    border-bottom-left-radius: 2rem;
    border-bottom-right-radius: 2rem;
    transform: translateY(0);
    opacity: 1;
    pointer-events: none;
    transition: transform 300ms ease, opacity 300ms ease;
  }

  .nav--shell[data-open='true'] .nav__social-panel {
    transform: translateY(0);
    opacity: 1;
    pointer-events: auto;
  }

  .nav__social-pill {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-grow: 1;
    padding: 2rem;
    border-radius: 9999px;
    background-color: var(--color-orange-400);
    color: white;
    font-size: 2.25rem; /* text-4xl */
    font-weight: 700; /* bold */
    text-transform: uppercase;
    transition: background-color 200ms ease, transform 200ms ease;
  }

  .nav__social-pill:hover {
    background-color: var(--color-orange-600);
    transform: rotate(4deg);
  }

  .nav__row {
    display: grid;
    grid-template-columns: repeat(12, minmax(0, 1fr));
    margin-top: 1rem;
    gap: 0;
  }

  .nav__row--mobile {
    display: none;
  }

  .nav__brand {
    grid-column: span 2;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    text-decoration: none;
  }

  .nav__brand-icon {
    width: 1.5rem;
    height: auto;
    object-fit: contain;
  }

  .nav__brand-text {
    color: var(--color-orange-500);
  }

  .nav__links {
    grid-column: span 8;
  }

  .nav__links-grid {
    display: grid;
    grid-template-columns: repeat(8, minmax(0, 1fr));
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .nav__link-item {
    grid-column: span 2;
    text-align: center;
  }

  .nav__link {
    display: inline-block;
    padding: 0.25rem 0;
    transition: color 200ms ease;
    color: var(--color-stone-900);
    text-decoration: none;
  }

  .nav__link:hover {
    color: var(--color-orange-500);
  }

  .nav__link--active {
    color: var(--color-orange-500);
    pointer-events: none;
  }

  .nav__contact {
    grid-column: span 2;
    text-align: right;
    cursor: pointer;
    color: var(--color-orange-500);
    background: none;
    border: none;
    padding: 0;
  }

  .nav__contact-label {
    transition: color 200ms ease;
  }

  .nav__contact:hover .nav__contact-label {
    color: var(--color-orange-900);
  }

  .nav__icon {
    display: none;
    width: 24px;
    height: 24px;
    color: var(--color-stone-950);
  }

  .nav__icon svg {
    width: 100%;
    height: 100%;
    display: block;
  }

  .nav__mobile-links {
    display: none;
  }

  .nav__mobile-list {
    list-style: none;
    margin: 0;
    padding: 24px;
    border-top: 0.5px solid var(--color-stone-300);
    border-bottom: 0.5px solid var(--color-stone-300);
  }

  .nav__mobile-item + .nav__mobile-item {
    margin-top: 24px;
  }

  .nav__mobile-link {
    font-family: "PP Fragment", "Times New Roman", serif;
    font-size: 28px;
    line-height: 1;
    letter-spacing: -0.84px;
    color: var(--color-stone-950);
    text-decoration: none;
    display: block;
  }

  .nav__mobile-link--active {
    color: var(--color-orange-500);
    pointer-events: none;
  }

  @media (max-width: 800px) {
    .nav--shell {
      transform: translateY(0);
    }

    .nav--shell[data-open='true'] {
      padding-top: var(--nav-social-height);
    }

    .nav__row--desktop {
      display: none;
    }

    .nav__row--mobile {
      display: grid;
      grid-template-columns: repeat(12, minmax(0, 1fr));
      align-items: center;
    }

    .nav__brand {
      grid-column: span 10;
    }

    .nav__contact {
      grid-column: span 2;
      justify-self: end;
    }

    .nav__contact-label {
      display: none;
    }

    .nav__icon {
      display: block;
    }

    .nav__icon--close {
      display: none;
    }

    .nav--shell[data-open='true'] .nav__icon--menu {
      display: none;
    }

    .nav--shell[data-open='true'] .nav__icon--close {
      display: block;
    }

    .nav__social-panel {
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      padding: 2.5rem 1rem 3rem;
      margin: 0 1rem;
      transform: translateY(-100%);
      opacity: 0;
    }

    .nav--shell[data-open='true'] .nav__mobile-links {
      display: block;
      margin: 0 1rem;
      background: var(--color-orange-50);
    }

    .nav--shell[data-open='true'] .nav__social-panel {
      margin: 0 1rem;
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>

<script type="module">
  const nav = document.getElementById('site-nav');
  const socialPanel = nav?.querySelector('.nav__social-panel');
  const overlay = document.getElementById('nav-overlay');
  const toggles = Array.from(document.querySelectorAll('[data-nav-toggle]'));
  const navLinks = Array.from(document.querySelectorAll('[data-nav-link]'));

  const isActivePath = (href) => {
    if (!href) return false;
    if (href === '/') return window.location.pathname === '/';
    return window.location.pathname.startsWith(href);
  };

  const updateActiveLinks = () => {
    navLinks.forEach((link) => {
      const active = isActivePath(link.getAttribute('href'));
      if (active) {
        if (link.classList.contains('nav__mobile-link')) {
          link.classList.add('nav__mobile-link--active');
        } else {
          link.classList.add('nav__link--active');
        }
        link.setAttribute('aria-current', 'page');
      } else {
        link.classList.remove('nav__link--active', 'nav__mobile-link--active');
        link.removeAttribute('aria-current');
      }
    });
  };

  const updateNavPeek = () => {
    if (!nav || !socialPanel) return;
    const height = socialPanel.offsetHeight || 0;
    nav.style.setProperty('--nav-social-height', `${height}px`);
  };

  updateNavPeek();
  updateActiveLinks();
  requestAnimationFrame(() => {
    if (nav) nav.dataset.ready = 'true';
  });
  document.addEventListener('astro:page-load', updateActiveLinks);
  window.addEventListener('resize', updateNavPeek);

  if (nav && overlay && toggles.length > 0) {
    const close = () => {
      nav.dataset.open = 'false';
      overlay.dataset.open = 'false';
      toggles.forEach((toggle) => {
        toggle.setAttribute('aria-expanded', 'false');
        toggle.blur();
      });
    };

    const open = () => {
      nav.dataset.open = 'true';
      overlay.dataset.open = 'true';
      toggles.forEach((toggle) => toggle.setAttribute('aria-expanded', 'true'));
    };

    toggles.forEach((toggle) => {
      toggle.addEventListener('click', () => {
        const isOpen = nav.dataset.open === 'true';
        if (isOpen) {
          close();
        } else {
          open();
        }
      });
    });

    overlay.addEventListener('click', close);

    window.addEventListener('keydown', (event) => {
      if (event.key === 'Escape') {
        event.preventDefault();
        close();
      }
    });
  }
</script>