---
import Layout from "../layouts/Layout.astro";
import SectionHeader from "../components/SectionHeader.astro";
import NumberedLink from "../components/NumberedLink.astro";
import Project from "../components/Project.astro";

const title = "Home";
---

<Layout
	title={title}
	description="NYC-based creative director portfolio featuring brand, physical, and digital work."
>
	<section class="wrapper hero">
		<SectionHeader hero>
			<h1 class="headline reveal reveal--up">
				<span>Ã‘YC</span>
				<span class="headline-pill headline-pill--left" aria-hidden="true"></span>
				<span>based</span>
				<span>creative</span>
				<span>director</span>
				<span class="headline-pill headline-pill--right" aria-hidden="true"></span>
				<span>shaping</span>
				<NumberedLink number="01" label="brand" href="#brand" />
				<span>experiences</span>
				<span>across</span>
				<NumberedLink number="02" label="physical" href="#physical" />
				<span>&</span>
				<NumberedLink number="03" label="digital." href="#digital" />
			</h1>
		</SectionHeader>
		<div class="subhead">
			<p>Currently Associate Creative Director of Brand & Experiential / Competitive Cold Brew Drinker at <a href="https://www.braze.com" target="_blank" rel="noopener noreferrer">Braze</a></p>
		</div>
	</section>
	<section id="brand" class="wrapper project-section">
		<SectionHeader class="project-section__header">
			<NumberedLink number="01" label="Brand" numberAlign="top" small />
		</SectionHeader>
		<div class="project-grid">
			<Project
				title="Braze Rebrand"
				subtitle="Brand identity system"
				category="Brand"
				href="#"
				imageSrc="/images/project-placeholder-landscape.svg"
				large
			/>
			<Project
				title="Living Proof"
				subtitle="Product launch kit"
				category="Brand"
				href="#"
				imageSrc="/images/project-placeholder-landscape.svg"
				medium
				center
			/>
			<Project
				title="Signal"
				subtitle="Campaign assets"
				category="Brand"
				href="#"
				imageSrc="/images/project-placeholder-square.svg"
				small
				right
			/>
			<Project
				title="Commonplace"
				subtitle="Packaging system"
				category="Brand"
				href="#"
				imageSrc="/images/project-placeholder-landscape.svg"
				medium
				left
			/>
			<Project
				title="Noura"
				subtitle="Identity refresh"
				category="Brand"
				href="#"
				imageSrc="/images/project-placeholder-landscape.svg"
				medium
				right
			/>
			<Project
				title="Somerville"
				subtitle="Retail rollout"
				category="Brand"
				href="#"
				imageSrc="/images/project-placeholder-square.svg"
				small
				left
			/>
			<Project
				title="Evergreen"
				subtitle="Brand guidelines"
				category="Brand"
				href="#"
				imageSrc="/images/project-placeholder-landscape.svg"
				large
			/>
		</div>
	</section>
	<section id="physical" class="wrapper project-section">
		<SectionHeader class="project-section__header">
			<NumberedLink number="02" label="Physical" numberAlign="top" small />
		</SectionHeader>
	</section>
	<section id="digital" class="wrapper project-section">
		<SectionHeader class="project-section__header">
			<NumberedLink number="03" label="Digital" numberAlign="top" small />
		</SectionHeader>
	</section>
	<div class="dummy"></div>
</Layout>

<style>
	.hero {
		container-type: inline-size;

		@media (min-width: 960px) {
			height: 50vh;
		}
	}

	.subhead {
		font-size: clamp(1rem, 2vw, 1.2rem);
		line-height: 1.5;
		color: var(--color-stone-400);
		margin-top: 2.5rem;
		margin-bottom: 7rem;

		& a {
			color: var(--color-stone-500);
			transition: color 200ms ease;
		}
		& a:hover {
			color: var(--color-orange-500);
		}
	}

	.headline {
		display: flex;
		flex-wrap: wrap;
		gap: 1rem;
		align-items: center;
		width: 100%;
		line-height: 1;

		@media (max-width: 800px) {
			line-height: 0.75;
		}
	}


	.headline-pill {
		position: relative;
		display: inline-block;
		width: 2.3em;
		height: 0.875em;
		border-radius: 1420.8px;
		background-size: cover;
		background-position: center;
		background-repeat: no-repeat;
	}

	.headline-pill::before {
		content: "";
		position: absolute;
		left: 0;
		top: 0.1em;
		width: 100%;
		height: 100%;
		border-radius: inherit;
		background-image: inherit;
		background-size: inherit;
		background-position: inherit;
		background-repeat: inherit;
		filter: blur(0.24em);
		opacity: 0.6;
		z-index: -1;
	}

	.headline-pill--left {
		background-image: url("/images/hero-pill-left.webp");
	}

	.headline-pill--right {
		background-image: url("/images/hero-pill-right.webp");
	}

	.project-section {
		padding-bottom: 4rem;
	}

	.project-grid {
		display: grid;
		grid-template-columns: repeat(12, minmax(0, 1fr));
		gap: 8rem 4rem;
		margin-top: 5rem;
		align-items: start;

		@media (max-width: 800px) {
			grid-template-columns: 1fr;
			gap: 3rem;
		}
	}

</style>

<script is:inline>
	const OFFSET = 96;
	const heroAnchors = document.querySelectorAll('.hero a[href^="#"]');

	heroAnchors.forEach((anchor) => {
		anchor.addEventListener("click", (event) => {
			const href = anchor.getAttribute("href");
			if (!href || href === "#") return;

			const target = document.querySelector(href);
			if (!target) return;

			event.preventDefault();
			const targetTop =
				target.getBoundingClientRect().top + window.scrollY - OFFSET;

			window.scrollTo({
				top: targetTop,
				behavior: "smooth",
			});
		});
	});

</script>
